<%- include('../partials/boilerplate') %>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/sidebar') %>
    <main class="main">

        <div class="section-title">Movie Details</div>
        <div class="main-content"> 

            <div class="cardtext location">Location: <%= `${movie.Location.name}` %></div>
            <div class="cardtext movietitle"> <%= `${movie.name}` %></div>
            <div class="cardtext year">Year: <%= `${movie.year}` %></div>
            <div class="cardtext idnum">ID#: <%= `${movie.Imdb.imdbnum}` %></div>

            <div class="cardtext api director">Director: <%= apiInfo.Director %></div>
            <div class="cardtext api writer">Writer: <%= apiInfo.Writer %></div>
            <div class="cardtext api genre">Genre: <%= apiInfo.Genre %></div>
            <div class="cardtext api actors">Actors: <%= apiInfo.Actors %></div>
            <div class="cardtext api plot">Plot: <%= apiInfo.Plot %></div>

            <div class="cardtext api poster"><img src="<%= apiInfo.Poster %>" alt=""></div>

            <div class="cardlink"><a href="/library/edit/<%=`${user.id}/${movie.id}`%>">Edit</a></div>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>